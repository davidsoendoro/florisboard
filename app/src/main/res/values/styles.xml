<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SmartbarContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SmartbarBLQuickAction" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/smartbar_button_margin</item>
        <item name="android:background">@drawable/shape_oval</item>
        <item name="android:backgroundTint">#E31E52</item>
        <item name="android:padding">@dimen/smartbar_button_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">#E31E52</item>
        <item name="android:buttonTint">#E31E52</item>
    </style>

    <style name="SmartbarQuickAction" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/smartbar_button_margin</item>
        <item name="android:background">@drawable/shape_oval</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:padding">@dimen/smartbar_button_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">#000000</item>
    </style>

    <style name="SmartbarBLQuickAction.Toggle">
        <item name="android:autoMirrored">true</item>
    </style>

    <style name="SmartbarQuickAction.Toggle">
        <item name="android:autoMirrored">true</item>
    </style>

    <style name="SmartbarQuickAction.PrivateModeButton">
        <item name="android:background">@drawable/shape_rect_rounded</item>
    </style>

    <style name="TextEditingButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/button_transparent_bg_on_press_with_border</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:hapticFeedbackEnabled">false</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="SettingsCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardBackgroundColor">@color/cardViewBackgroundColor</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="SettingsCardView.Clickable">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SettingsCardView.Clickable.Success">
        <item name="cardBackgroundColor">?colorSuccess</item>
    </style>

    <style name="SettingsCardView.Clickable.Warning">
        <item name="cardBackgroundColor">?colorWarning</item>
    </style>

    <style name="SettingsCardView.Clickable.Error">
        <item name="cardBackgroundColor">?colorError</item>
    </style>

    <style name="SettingsCardView.Clickable.Info">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Main Settings  -->
    <style name="kobold_welcome_title">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            #141414
        </item>
        <item name="android:textStyle">
            bold
        </item>
    </style>

    <style name="kobold_welcome_desc">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            #3D3D3D
        </item>
    </style>

    <style name="kobold_welcome_feature1_title">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            #3D3D3D
        </item>
        <item name="android:textStyle">
            bold
        </item>
    </style>

    <style name="kobold_welcome_feature1_desc">
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:textColor">
            #3D3D3D
        </item>
    </style>

    <style name="kobold_media_text">
        <item name="android:textSize">
            10sp
        </item>
        <item name="android:textColor">
            #8D8D8D
        </item>
    </style>

    <style name="kobold_guide_text">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            #3D3D3D
        </item>
    </style>

    <style name="kobold_template_toolbar_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#141414</item>
    </style>

    <style name="kobold_template_selection">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#141414</item>
    </style>

    <style name="kobold_template_input_label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3D3D3D</item>
    </style>

    <style name="kobold_template_confirm_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#141414</item>
    </style>

    <style name="kobold_template_confirm_desc">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3D3D3D</item>
    </style>

    <style name="kobold_button_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#141414</item>
    </style>

    <style name="kobold_keyboard_pop_warning">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#1F1B66</item>
    </style>

    <style name="kobold_keyboard_pop_button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2B4AC7</item>
    </style>

    <style name="kobold_keyboard_pop_eclipse" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/smartbar_button_margin</item>
        <item name="android:background">@drawable/shape_ellipse_134</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:padding">@dimen/smartbar_button_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">#000000</item>
    </style>

    <style name="BlueButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/kobold_button_blue</item>
    </style>

    <style name="error_edit_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#E60505</item>
    </style>
</resources>
