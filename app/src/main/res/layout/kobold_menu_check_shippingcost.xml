<?xml version="1.0" encoding="utf-8"?>
<com.kokatto.kobold.checkshippingcost.KeyboardCheckShippingCost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/editorBackground"
        app:layout_constraintBottom_toTopOf="@id/footer_layout"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/kobold_margin_12px"
            android:paddingVertical="@dimen/kobold_margin_16px">

            <com.kokatto.kobold.uicomponent.KoboldEditText
                android:id="@+id/sender_address_edittext"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="@string/kobold_sender_address_hint"
                android:inputType="textCapSentences"
                app:label="@string/kobold_sender_address_label"
                app:isAutofill="true"/>

            <com.kokatto.kobold.uicomponent.KoboldEditText
                android:id="@+id/receiver_address_edittext"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/kobold_margin_8px"
                android:hint="@string/kobold_receiver_address_hint"
                android:inputType="textCapSentences"
                app:label="@string/kobold_receiver_address_label" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/kobold_margin_24px">

                <TextView
                    android:id="@+id/package_weight_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berat Paket"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Maks. 7kg"
                    android:textColor="@color/text_disabled"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/package_weight_title" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:cardCornerRadius="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/gray_1"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/minus_weight_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/background_subtle"
                            android:paddingHorizontal="12dp"
                            android:src="@drawable/ic_minus_minor" />

                        <TextView
                            android:id="@+id/package_weight_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center"
                            android:text="1 kg"
                            android:textColor="@color/text_secondary" />

                        <ImageView
                            android:id="@+id/plus_weight_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/background_subtle"
                            android:paddingHorizontal="12dp"
                            android:src="@drawable/ic_add_minor" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:background="@color/cardViewBackgroundColor"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawableStart="@drawable/ic_keyboard_arrow_left"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/kembali"
            android:textColor="@color/textColorDark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_keyboard_arrow_left"
            app:drawableStartCompat="@drawable/ic_keyboard_arrow_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />

        <Button
            android:id="@+id/submit_button"
            style="@style/BlueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="@dimen/kobold_margin_12px"
            android:text="@string/kobold_submit_checkshippingcost_button"
            android:textAllCaps="false"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.kokatto.kobold.checkshippingcost.KeyboardCheckShippingCost>
