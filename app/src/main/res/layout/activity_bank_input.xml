<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fullcreen_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"
        android:gravity="center|center_vertical"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:paddingVertical="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kobold_margin_8px"
                android:padding="@dimen/kobold_margin_16px"
                android:src="@drawable/ic_cross_svg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/icon_black" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="17dp"
                android:text="Title layout"
                android:textColor="@color/textColorDark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/back_button"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border"
            app:layout_constraintTop_toBottomOf="@id/title_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/main_layout"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintVertical_weight="1">

            <LinearLayout
                android:id="@+id/main_content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="17dp"
                android:paddingTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/kobold_margin_16px"
                    android:text="@string/kobold_bank_input_selection"
                    android:textAppearance="@style/FormTitle" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    />

                <TextView
                    style="@style/FormEditTextTitle"
                    android:layout_marginTop="@dimen/kobold_margin_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kobold_bank_input_bank_no" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/kobold_margin_24px"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_bankAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/FormEditTextHint"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/FormEditTextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kobold_bank_input_bank_holder" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_bankHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textAppearance="@style/FormEditTextHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/delete_button"
                    android:layout_gravity="center_horizontal"
                    style="@style/FormEditTextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_delete_bank"
                    android:drawablePadding="@dimen/kobold_margin_8px"
                    android:layout_marginVertical="@dimen/kobold_margin_16px"
                    android:paddingVertical="@dimen/kobold_margin_16px"
                    android:paddingHorizontal="@dimen/kobold_margin_16px"
                    android:text="@string/kobold_bank_input_action_delete" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/kobold_margin_16px"
                    android:paddingLeft="@dimen/kobold_margin_32px"
                    android:paddingRight="@dimen/kobold_margin_32px"
                    android:layout_marginBottom="@dimen/kobold_margin_24px">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/submit_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <ProgressBar
                            android:id="@+id/submit_button_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/submit_button_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/kobold_blue_button"
                            android:drawableTint="@color/icon_white"
                            android:gravity="center"
                            android:paddingVertical="12dp"
                            android:text="@string/kobold_bank_input_action_submit"
                            android:textColor="@color/text_color_white" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <View
                    android:id="@+id/line_bottom"
                    android:layout_width="64dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="6dp"
                    android:background="@color/textBlack" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
