<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/kobold_margin_12px"
    android:paddingTop="@dimen/kobold_margin_12px">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:elevation="0dp"
            android:layout_weight="0"
            app:cardBackgroundColor="#E0E0E0"
            app:cardCornerRadius="@dimen/kobold_margin_24px">

            <TextView
                android:id="@+id/contact_header"
                style="@style/kobold_primaryLabel24spBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="S" />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/kobold_margin_8px">

            <TextView
                android:id="@+id/contact_name"
                style="@style/kobold_primaryLabel14spBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sulistyo" />

            <TextView
                android:id="@+id/contact_phone"
                style="@style/kobold_subduedLabel12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/kobold_margin_4px"
                android:text="0812349293810" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/selection_card"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/inner_border"
            app:strokeWidth="2dp"
            android:layout_weight="0"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/selection_item_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="6dp"
                android:src="@drawable/ic_checked"
                android:visibility="gone"
                app:tint="@color/icon_white" />

        </com.google.android.material.card.MaterialCardView>



    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_marginTop="@dimen/kobold_margin_16px"
        android:id="@+id/line_9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/inner_border"
        />

</androidx.appcompat.widget.LinearLayoutCompat>
