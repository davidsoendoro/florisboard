<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/washedout_background">

    <ImageView
        android:id="@+id/expedition_service_img"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="22dp"
        android:src="@drawable/img_jne"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/service_package_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="12dp"
        app:cardElevation="0dp"
        tools:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/border"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/kobold_margin_16px"
            android:paddingVertical="14dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/selection_item_image_radio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/inner_border"
                app:strokeWidth="2dp">

                <ImageView
                    android:id="@+id/selection_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="6dp"
                    android:src="@drawable/ic_checked"
                    android:tint="@color/icon_white"
                    android:visibility="gone" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/total_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kobold_margin_12px"
                android:text="Rp8.500"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/selection_item_image_radio"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/discount_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kobold_margin_12px"
                android:text="Rp8.500"
                android:visibility="gone"
                android:textColor="@color/text_disabled"
                app:layout_constraintStart_toEndOf="@id/total_price_text"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            <TextView-->
            <!--                android:id="@+id/service_name_text"-->
            <!--                style="@style/ItemChooseCourierInfo"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:text="SiCepat REG"-->
            <!--                app:layout_constraintEnd_toStartOf="@id/dot_text"-->
            <!--                app:layout_constraintTop_toTopOf="parent" />-->

            <!--            <TextView-->
            <!--                android:id="@+id/dot_text"-->
            <!--                style="@style/ItemChooseCourierInfo"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text=" â€¢ "-->
            <!--                app:layout_constraintEnd_toStartOf="@id/service_eta_text"-->
            <!--                app:layout_constraintTop_toTopOf="parent" />-->

            <TextView
                android:id="@+id/service_text"
                style="@style/ItemChooseCourierInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="2 hari kerja"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_not_avaiable"
                android:paddingTop="@dimen/kobold_margin_4px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat tujuan tidak dijangkau oleh Kurir"
                android:textColor="#E60505"
                android:textSize="10sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/total_price_text"
                app:layout_constraintTop_toBottomOf="@id/total_price_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
