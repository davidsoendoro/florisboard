<?xml version="1.0" encoding="utf-8"?>
<com.kokatto.kobold.editor.KeyboardEditor
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kobold_editor"
    android:layout_width="match_parent"
    android:layout_height="@dimen/smartbar_height"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/attr_name_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:hint="@string/settings__theme_editor__name_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/kobold_edittext_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="textCapSentences"
                android:backgroundTint="@android:color/white"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/kobold_button_close_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="X"
            android:onClick="onButtonClicked"/>

    </LinearLayout>

</com.kokatto.kobold.editor.KeyboardEditor>
