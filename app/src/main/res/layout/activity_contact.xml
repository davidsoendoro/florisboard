<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crm.ContactListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/SettingsTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/SettingsTheme.PopupOverlay"
            app:title="@string/kobold_contact">

            <ImageView
                android:id="@+id/kobold_ContactListSearchImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/kobold_margin_16px"
                android:src="@drawable/ic_search_white" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/kobold_ContactContent"
        layout="@layout/content_contact_activity" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/kobolt_ContactAddContactFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/kobold_blue_button"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/fab_margin"
        android:text="Tambah kontak"
        android:textAllCaps="false"
        android:textColor="@color/text_color_white"
        app:icon="@drawable/ic_add_white"
        app:iconTint="@color/colorWhite"/>

<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:id="@+id/kobolt_contact_add_contact_button"-->
<!--        android:background="@color/kobold_blue_button"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center_horizontal|bottom"-->
<!--        android:src="@drawable/ic_add_white"-->
<!--        android:text="Tambah kontak"/>-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
