<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/icon_black" />


        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="17dp"
            android:layout_marginStart="20dp"
            android:text="@string/kobold_sadd_contact_toolbar_title"
            android:textColor="@color/textBlack"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/page_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/kobold_margin_16px"
            android:layout_marginVertical="@dimen/kobold_margin_24px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Pelanggan"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/kobolt_add_contact_information_title"/>

            <TextView
                android:id="@+id/add_contact_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:text="Nama"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/kobolt_add_contact_information_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_contact_name_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_contact_name_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_add_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/textBlack"
                    android:hint="Isi nama pelanggan"/>

                <TextView
                    android:id="@+id/edittext_add_contact_name_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/template_text_error_length"
                    android:textAppearance="@style/error_edit_text"
                    android:visibility="gone" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/add_contact_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:text="Nomor telepon*"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/add_contact_name_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_contact_phone_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_contact_phone_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_add_contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/textBlack"
                    android:inputType="phone"
                    android:hint="Isi nomor telepon"/>

                <TextView
                    android:id="@+id/edittext_add_contact_phone_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/template_text_error_length"
                    android:textAppearance="@style/error_edit_text"
                    android:visibility="gone" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/add_contact_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:text="Alamat penerima"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/add_contact_phone_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_contact_address_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_contact_address_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_add_contact_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/textBlack"
                    android:hint="Isi alamat penerima"/>

                <TextView
                    android:id="@+id/edittext_add_contact_address_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/template_text_error_length"
                    android:textAppearance="@style/error_edit_text"
                    android:visibility="gone" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/add_contact_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:text="Email"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/add_contact_address_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_contact_email_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_contact_email_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_add_contact_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/textBlack"
                    android:hint="Isi alamat email"/>

                <TextView
                    android:id="@+id/edittext_add_contact_email_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/template_text_error_length"
                    android:textAppearance="@style/error_edit_text"
                    android:visibility="gone" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/add_contact_imageview_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/add_contact_email_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/kobold_margin_32px"
                android:src="@drawable/ic_line_10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Pesanan"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/kobold_margin_32px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_contact_imageview_line"
                android:id="@+id/kobolt_add_contact_order_channel_title"/>

            <RelativeLayout
                android:id="@+id/kobolt_add_contact_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/kobold_margin_16px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kobolt_add_contact_order_channel_title"
                app:layout_constraintBottom_toTopOf="@id/kobolt_add_contact_add_channel_text">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_contact_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/row_add_order_channel" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Channel"
                android:textColor="@color/blue_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/kobold_margin_24px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kobolt_add_contact_view_layout"
                android:id="@+id/kobolt_add_contact_add_channel_text"
                android:clickable="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/phone_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="@color/kobold_gray"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kobolt_add_contact_add_channel_text">

                <TextView
                    android:id="@+id/phone_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/icon_white"
                    android:gravity="center"
                    android:paddingVertical="12dp"
                    android:text="Nomor telepon wajib diisi"
                    android:textColor="@color/text_subdued" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:clickable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:cardBackgroundColor="@color/kobold_blue_button"
                app:layout_constraintTop_toBottomOf="@+id/phone_button">

                <TextView
                    android:id="@+id/submit_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/icon_white"
                    android:gravity="center"
                    android:paddingVertical="12dp"
                    android:text="Simpan"
                    android:textColor="@color/text_color_white"/>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

