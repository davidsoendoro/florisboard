<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kobold_spinner_bank_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/kobold_item_42px"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/spinner_radio_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/kobold_margin_8px"
        android:layout_marginStart="@dimen/kobold_margin_16px"
        android:layout_marginEnd="@dimen/kobold_margin_8px"
        android:src="@drawable/ic_radio_default" />

    <ImageView
        android:id="@+id/spinner_icon"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:src="@drawable/img_jne"
        android:layout_margin="@dimen/kobold_margin_8px"/>

    <TextView
        android:id="@+id/spinner_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/kobold_margin_16px"
        android:textAppearance="@style/spinnerItemLabel"
        tools:text="JNE - REG" />

</LinearLayout>
