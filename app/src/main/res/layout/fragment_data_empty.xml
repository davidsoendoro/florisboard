<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_data_empty_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_placeholder"
            android:layout_width="200dp"
            android:layout_height="124dp"
            android:layout_gravity="center"
            android:src="@drawable/img_medium_fun_bukabank_account"
            android:visibility="visible" />


        <TextView
            android:id="@+id/title_placeholder"
            style="@style/kobold_FragmentEmptyTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/kobold_bank_empty_title" />

        <TextView
            android:id="@+id/desc_placeholder"
            style="@style/kobold_FragmentEmptyDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/kobold_bank_empty_desc" />

        <androidx.cardview.widget.CardView
            android:id="@+id/action_placeholder"
            style="@style/kobold_FragmentEmptyAction">

            <TextView
                style="@style/kobold_FragmentEmptyText"
                android:text="@string/kobold_bank_empty_action_btn" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
