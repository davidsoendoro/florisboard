<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error_save_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_medium"
            android:layout_width="200dp"
            android:layout_height="124dp"
            android:layout_gravity="center"
            android:contentDescription="image"
            app:srcCompat="@drawable/img_medium_fun_sad" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:lineSpacingExtra="1sp"
            android:text="@string/template_error_save_title"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:ellipsize="end"
            android:lineSpacingExtra="1sp"
            android:maxLines="2"
            android:text="@string/template_error_save_desc"
            android:textAlignment="center"
            android:textColor="@color/text_subtitle"
            android:textSize="14sp" />

        <Button
            android:id="@+id/reload_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Muat Ulang"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            app:cornerRadius="4dp"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            app:iconPadding="11.31dp"
            app:iconSize="13dp"
            app:iconTint="@color/text_primary"
            app:strokeColor="@color/stroke_primary"
            app:strokeWidth="1dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
