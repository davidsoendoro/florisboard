<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/halfrounded_layout"
    app:behavior_hideable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/kobold_add_contact_back_text_title"
            android:textColor="@color/textColorDark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="@string/kobold_add_contact_back_text_desc" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kobold_add_contact_back_btn_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/primary_50"
            app:cardCornerRadius="@dimen/kobold_margin_8px"
            app:cardElevation="0dp"
            app:elevation="0dp">

            <TextView
                android:id="@+id/kobold_add_contact_back_text_yes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="12dp"
                android:gravity="center"
                android:text="@string/kobold_add_contact_back_button_yes"
                android:textColor="@color/text_color_white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kobold_add_contact_back_btn_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="@dimen/kobold_margin_8px"
            app:cardElevation="0dp"
            app:elevation="0dp"
            app:strokeColor="@color/primary_50"
            app:strokeWidth="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="12dp"
                android:gravity="center"
                android:text="@string/kobold_add_contact_back_button_no"
                android:textColor="@color/textColorDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</FrameLayout>
