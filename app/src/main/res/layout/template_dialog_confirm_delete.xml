<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kobold_margin_16px"
            android:layout_marginEnd="@dimen/kobold_margin_16px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/kobold_margin_24px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/kobold_margin_16px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kobold_template_delete_confirm_title"
                        android:textAppearance="@style/kobold_template_confirm_title" />

                    <TextView
                        android:layout_marginTop="@dimen/kobold_margin_12px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kobold_template_delete_confirm_desc"
                        android:textAppearance="@style/kobold_template_confirm_desc" />

                    <Button
                        android:id="@+id/confirm_delete_button"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/kobold_margin_24px"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/kobold_template_delete_button_ok"
                        android:textAppearance="@style/kobold_button_text"
                        android:textAllCaps="false"
                        app:strokeColor="@color/stroke_primary"
                        app:strokeWidth="1dp"
                        />

                    <Button
                        android:id="@+id/confirm_cancel_button"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#2464F2"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/kobold_template_delete_button_cancel"
                        android:textAppearance="@style/kobold_button_text"
                        android:textAllCaps="false"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
