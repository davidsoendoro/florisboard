<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_empty_root">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_medium_"
            android:layout_width="200dp"
            android:layout_height="124dp"
            android:layout_gravity="center"
            android:contentDescription="image"
            android:visibility="visible"
            app:srcCompat="@drawable/img_medium_box_empty" />

        <TextView
            android:id="@+id/title"
            android:layout_width="312dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:lineSpacingExtra="1sp"
            android:text="@string/kobold_transaction_empty_title"
            android:textAlignment="center"
            android:textColor="#141414"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/img_medium_" />

        <TextView
            android:id="@+id/content"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:ellipsize="end"
            android:lineSpacingExtra="1sp"
            android:maxLines="2"
            android:text="@string/kobold_transaction_empty_desc"
            android:textAlignment="center"
            android:textColor="#3D3D3D"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/empty_create_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:backgroundTint="#2464F2"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/kobold_transaction_empty_action"
            android:textAllCaps="false"
            android:visibility="gone"
            app:cornerRadius="4dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconSize="16dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
