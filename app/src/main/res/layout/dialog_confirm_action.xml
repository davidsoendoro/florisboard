<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kobold_margin_16px"
            android:layout_marginEnd="@dimen/kobold_margin_16px"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/kobold_margin_24px"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/layout_complete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/action_chat_complete"
                        android:layout_marginRight="@dimen/kobold_margin_12px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/kobold_margin_16px"
                        app:cardCornerRadius="@dimen/kobold_margin_16px"
                        android:outlineAmbientShadowColor="@color/colorPrimary"
                        android:elevation="0dp"
                        app:strokeColor="#EBEBEB"
                        app:strokeWidth="1dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_chat"
                                android:layout_marginTop="@dimen/kobold_margin_16px"
                                />
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="@dimen/kobold_margin_16px"
                                android:layout_marginHorizontal="@dimen/kobold_margin_16px"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/kobold_transaction_action_complete_chat"
                                style="@style/dialogActionCard"/>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/action_edit_complete"
                        android:layout_marginLeft="@dimen/kobold_margin_12px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/kobold_margin_16px"
                        app:cardCornerRadius="@dimen/kobold_margin_16px"
                        android:outlineAmbientShadowColor="@color/colorPrimary"
                        android:elevation="0dp"
                        app:strokeColor="#EBEBEB"
                        app:strokeWidth="1dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_edit_small"
                                android:layout_marginTop="@dimen/kobold_margin_16px"
                                />
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="@dimen/kobold_margin_16px"
                                android:layout_marginHorizontal="@dimen/kobold_margin_16px"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/kobold_transaction_action_complete_edit"
                                style="@style/dialogActionCard"/>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_paid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/action_chat"
                        android:layout_marginRight="@dimen/kobold_margin_12px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/kobold_margin_16px"
                        app:cardCornerRadius="@dimen/kobold_margin_16px"
                        android:outlineAmbientShadowColor="@color/colorPrimary"
                        android:elevation="0dp"
                        app:strokeColor="#EBEBEB"
                        app:strokeWidth="1dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_chat"
                                android:layout_marginTop="@dimen/kobold_margin_16px"
                                />
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="@dimen/kobold_margin_16px"
                                android:layout_marginHorizontal="@dimen/kobold_margin_16px"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/kobold_transaction_action_chat"
                                style="@style/dialogActionCard"/>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/action_unpaid"
                        android:layout_marginLeft="@dimen/kobold_margin_12px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/kobold_margin_16px"
                        app:cardCornerRadius="@dimen/kobold_margin_16px"
                        android:outlineAmbientShadowColor="@color/colorPrimary"
                        android:elevation="0dp"
                        app:strokeColor="#EBEBEB"
                        app:strokeWidth="1dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_unpaid"
                                android:layout_marginTop="@dimen/kobold_margin_16px"
                                />
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="@dimen/kobold_margin_16px"
                                android:layout_marginHorizontal="@dimen/kobold_margin_16px"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/kobold_transaction_action_unpaid"
                                style="@style/dialogActionCard"/>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_unsent"
                    android:layout_marginTop="@dimen/kobold_margin_16px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/action_unsent"
                        android:layout_marginRight="@dimen/kobold_margin_12px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/kobold_margin_16px"
                        app:cardCornerRadius="@dimen/kobold_margin_16px"
                        android:outlineAmbientShadowColor="@color/colorPrimary"
                        android:elevation="0dp"
                        app:strokeColor="#EBEBEB"
                        app:strokeWidth="1dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_unsent"
                                android:layout_marginTop="@dimen/kobold_margin_16px"
                                />

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="@dimen/kobold_margin_16px"
                                android:layout_marginHorizontal="@dimen/kobold_margin_16px"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/kobold_transaction_action_unsent"
                                style="@style/dialogActionCard"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_marginLeft="@dimen/kobold_margin_12px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/kobold_margin_16px"
                    android:id="@+id/layout_unpaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/action_nota"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/kobold_margin_16px"
                        app:cardCornerRadius="@dimen/kobold_margin_16px"
                        android:outlineAmbientShadowColor="@color/colorPrimary"
                        android:elevation="0dp"
                        app:strokeColor="#EBEBEB"
                        app:strokeWidth="1dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_arrow_right"
                                android:layout_marginTop="@dimen/kobold_margin_16px"
                                />
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="@dimen/kobold_margin_16px"
                                android:layout_marginHorizontal="@dimen/kobold_margin_16px"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/kobold_transaction_action_nota"
                                style="@style/dialogActionCard"/>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_cancel"
                    android:layout_marginTop="@dimen/kobold_margin_16px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/action_edit"
                        android:layout_marginTop="@dimen/kobold_margin_24px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kobold_transaction_action_edit"
                        android:drawableLeft="@drawable/ic_edit_small"
                        android:drawablePadding="@dimen/kobold_margin_12px"
                        android:gravity="center_vertical"
                        style="@style/dialogActionText"/>

                    <TextView
                        android:id="@+id/action_cancel"
                        android:drawableStart="@drawable/ic_circle_cross"
                        android:drawablePadding="@dimen/kobold_margin_12px"
                        android:layout_marginTop="@dimen/kobold_margin_24px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kobold_transaction_action_cancel"
                        android:gravity="center_vertical"
                        style="@style/dialogActionText"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="64dp"
        android:layout_height="2dp"
        android:layout_marginBottom="6dp"
        android:layout_gravity="center|bottom"
        android:background="@color/textBlack" />

</LinearLayout>
