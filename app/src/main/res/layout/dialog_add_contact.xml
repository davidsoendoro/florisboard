<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/halfrounded_layout"
    app:behavior_hideable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tambahKontakHeader"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_kobold_close"
            android:paddingEnd="@dimen/kobold_margin_16px"
            />

        <TextView
            android:id="@+id/tambahKontakHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tambah kontak"
            app:layout_constraintStart_toEndOf="@id/closeButton"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/textColorDark"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="@dimen/kobold_margin_12px"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addContactManualLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tambahKontakHeader"
            >

            <ImageView
                android:id="@+id/addContactManualImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_user"
                android:paddingEnd="@dimen/kobold_margin_16px"
                />
            <TextView
                android:id="@+id/addContactManualHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/addContactManualImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/addContactManualImage"
                android:text="Tambah kontak manual"
                style="@style/kobold_primaryLabel14spBold"
                android:textAlignment="viewStart"/>
            <TextView
                android:id="@+id/addContactManualDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/addContactManualImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addContactManualImage"
                android:text="Masukkan kontak secara manual"
                style="@style/kobold_secondaryLabel12sp"
                android:textAlignment="viewStart"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/importContactLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/addContactManualLayout"
            >

            <ImageView
                android:id="@+id/importContactImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_phonebook"
                android:paddingEnd="@dimen/kobold_margin_16px"
                />
            <TextView
                android:id="@+id/importContactHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/importContactImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/importContactImage"
                    android:text="Import dari phonebook"
                style="@style/kobold_primaryLabel14spBold"
                android:textAlignment="viewStart"/>
            <TextView
                android:id="@+id/importContactDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/importContactImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/importContactImage"
                android:text="Tambah kontak dengan gampang dari phonebookmu"
                style="@style/kobold_secondaryLabel12sp"
                android:textAlignment="viewStart"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
