<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:clipToPadding="false"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp">

        <ImageView
            android:id="@+id/media_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_whatsapp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Ksatria Baja hitam"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            style="@style/kobold_primaryLabel14spBold"
            app:layout_constraintBottom_toBottomOf="@id/media_img"
            app:layout_constraintEnd_toStartOf="@id/dot_text"
            app:layout_constraintStart_toEndOf="@id/media_img"
            app:layout_constraintTop_toTopOf="@id/media_img" />

        <TextView
            android:id="@+id/dot_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" â€¢ "
            android:textColor="@color/text_subdued"
            app:layout_constraintBottom_toBottomOf="@id/name_text"
            app:layout_constraintStart_toEndOf="@id/name_text"
            app:layout_constraintTop_toTopOf="@id/name_text" />

        <TextView
            android:id="@+id/phone_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:text="xxxxxxxxxxxx"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/media_img"
            app:layout_constraintStart_toEndOf="@id/dot_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/total_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rp. xxx.xxx"
            style="@style/kobold_primaryLabel12spBold"
            app:layout_constraintStart_toStartOf="@id/name_text"
            app:layout_constraintTop_toBottomOf="@id/name_text" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="xx xxx xxxx, xx.xx WIB"
            style="@style/kobold_subduedLabel10sp"
            app:layout_constraintStart_toStartOf="@id/name_text"
            app:layout_constraintTop_toBottomOf="@id/total_price_text" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/status_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:cardBackgroundColor="@color/background_informational"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="@id/name_text"
            app:layout_constraintTop_toBottomOf="@id/date_text"
            app:strokeWidth="0dp">

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"
                android:text="Belum diproses"
                android:textColor="@color/text_informational_01"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:cardBackgroundColor="@color/washedout_background"
            app:layout_constraintStart_toStartOf="@id/name_text"
            app:layout_constraintTop_toBottomOf="@id/status_text_layout">

            <TextView
                android:id="@+id/deliveryfee_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Ongkir xrb"
                style="@style/kobold_secondaryLabel12sp" />
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/bank_img"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/kobold_margin_12px"
            android:src="@drawable/ic_whatsapp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/materialCardView2"
            tools:visibility="visible"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/logistic_img"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/kobold_margin_12px"
            android:src="@drawable/ic_whatsapp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bank_img"
            tools:visibility="visible"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
