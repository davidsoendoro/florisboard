<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical|top"
        android:layout_marginStart="@dimen/kobold_margin_16px"
        android:layout_marginEnd="@dimen/kobold_margin_16px">

        <ImageView
            android:id="@+id/kobold_main_close"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="17dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/kobold_main_close" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/kobold_template_input_toolbar_title"
            android:textAppearance="@style/kobold_template_toolbar_title"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kobold_margin_16px"
        android:layout_marginEnd="@dimen/kobold_margin_16px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/kobold_margin_24px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kobold_margin_16px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kobold_template_input_label_template"
                    android:textAppearance="@style/kobold_template_input_label"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Pesan Pembuka">


                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kobold_margin_24px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kobold_margin_16px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/kobold_template_input_label_title"
                    android:textAppearance="@style/kobold_template_input_label"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kobold_welcome_feature1_desc"
                    android:textAppearance="@style/kobold_welcome_feature1_desc"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kobold_margin_24px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kobold_margin_16px"
                android:layout_marginBottom="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/kobold_template_input_label_content"
                    android:textAppearance="@style/kobold_template_input_label"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kobold_welcome_feature1_desc"
                    android:textAppearance="@style/kobold_welcome_feature1_desc"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
