<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_medium_"
        android:layout_width="200dp"
        android:layout_height="124dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_medium_fun_empty_positive"
        android:contentDescription="image"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="312dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="Belum ada Template Chat"
        android:textColor="#141414"
        android:textSize="18sp"
        android:textAlignment="center"
        android:lineSpacingExtra="1sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_medium_"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="24dp"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:textColor="#3D3D3D"
        android:textSize="14sp"
        android:text="Semua template yang kamu buat akan muncul di sini."
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="1sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/create_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@android:drawable/ic_input_add"
        app:iconSize="16dp"
        app:iconPadding="6dp"
        app:iconGravity="textStart"
        app:cornerRadius="4dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Buat Template"
        android:textAllCaps="false"
        android:backgroundTint="#2464F2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content" />

</androidx.constraintlayout.widget.ConstraintLayout>
