<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_row_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/kobold_margin_8px"
        android:layout_marginVertical="@dimen/kobold_margin_8px"
        android:layout_weight="0"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/inner_border"
        app:strokeWidth="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/kobold_margin_16px"
            android:paddingVertical="@dimen/kobold_margin_12px">

            <androidx.cardview.widget.CardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_weight="0"
                android:elevation="0dp"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="@dimen/kobold_margin_24px">

                <TextView
                    android:id="@+id/contact_header"
                    style="@style/kobold_primaryLabel24spBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="S" />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/kobold_margin_8px">

                <TextView
                    android:id="@+id/contact_name"
                    style="@style/kobold_primaryLabel14spBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sulistyo" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_debt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/contact_debt"
                        style="@style/kobold_secondaryLabel10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/kobold_margin_4px"
                        android:text="Rp50.000" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/debt_info_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/kobold_margin_8px"
                        android:layout_weight="0"
                        app:cardBackgroundColor="#FFD4D6"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/kobold_margin_4px"
                            android:text="Ada hutang"
                            android:textColor="#7A0602"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/contact_last_transaction"
                    style="@style/kobold_subduedLabel10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/kobold_margin_4px"
                    android:text="Transaksi terakhir 12 Agu 2021" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>


</androidx.appcompat.widget.LinearLayoutCompat>
