<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selection_item_image_radio"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/inner_border"
        app:strokeWidth="2dp">

        <ImageView
            android:id="@+id/selection_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="6dp"
            android:src="@drawable/ic_checked"
            android:tint="@color/icon_white"
            android:visibility="gone" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/total_price_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kobold_margin_12px"
        android:text="Makanan dan minuman"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/selection_item_image_radio"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
