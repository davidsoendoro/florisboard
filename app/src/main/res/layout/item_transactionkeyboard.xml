<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:clipToPadding="false"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/border"
    app:strokeWidth="1dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx xxx xxxx, xx.xx WIB"
            android:textColor="@color/text_subdued"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/name_text"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/media_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_whatsapp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Ksatria Baja hitam"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/date_text"
            app:layout_constraintEnd_toStartOf="@id/dot_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/dot_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" â€¢ "
            android:textColor="@color/text_subdued"
            app:layout_constraintStart_toEndOf="@id/name_text"
            app:layout_constraintBottom_toBottomOf="@id/name_text"
            app:layout_constraintTop_toTopOf="@id/name_text" />

        <TextView
            android:id="@+id/phone_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:text="xxxxxxxxxxxx"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/name_text"
            app:layout_constraintTop_toTopOf="@id/name_text"
            app:layout_constraintStart_toEndOf="@id/dot_text"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/total_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Rp. xxx.xxx"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/name_text"
            app:layout_constraintTop_toBottomOf="@id/name_text" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="@color/washedout_background"
            app:layout_constraintStart_toStartOf="@id/name_text"
            app:layout_constraintTop_toBottomOf="@id/total_price_text">

            <TextView
                android:id="@+id/deliveryfee_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:textColor="@color/text_secondary"
                android:paddingHorizontal="8dp"
                android:text="Ongkir xrb"
                android:textSize="12sp" />

        </com.google.android.material.card.MaterialCardView>


        <ImageView
            android:id="@+id/bank_img"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/kobold_margin_12px"
            android:src="@drawable/ic_whatsapp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/materialCardView2"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/logistic_img"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/kobold_margin_12px"
            android:src="@drawable/ic_whatsapp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bank_img"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
