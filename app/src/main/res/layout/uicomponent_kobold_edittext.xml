<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_kobold_edittext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="54dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/kobold_edittext_errorText"
        app:strokeColor="@color/gray_1"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/kobold_edittext_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/kobold_margin_12px"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/kobold_edittext_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/nama_template"
                    android:textColor="@color/text_subtitle"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kobold_edittext_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/kobold_margin_4px"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:textColor="@color/textColorDark"
                    android:textSize="8pt"
                    tools:text="Lorem ipsum dolor sit amet" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/kobold_edittext_editable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/textColorDark"
                    android:textSize="8pt"
                    android:visibility="gone"
                    tools:text="Lorem ipsum dolor sit amet" />

            </LinearLayout>

            <ImageView
                android:id="@+id/kobold_edittext_chevron"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:maxHeight="@dimen/kobold_margin_12px"
                android:padding="@dimen/kobold_margin_16px"
                android:src="@drawable/ic_chevron_right"
                android:visibility="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/kobold_edittext_errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kobold_margin_8px"
        android:text="@string/error_toomanychars"
        android:textColor="@color/text_error_red"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Melebihi karakter yang tersedia" />

</androidx.constraintlayout.widget.ConstraintLayout>
