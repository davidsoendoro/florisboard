<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_medium"
        android:layout_width="200dp"
        android:layout_height="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_medium_fun_error_user"
        android:contentDescription="iamge"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="312dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="Halaman tidak dapat dimuat"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textAlignment="center"
        android:lineSpacingExtra="1sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_medium"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="24dp"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:text="Maaf, ada kesalahan dalam memuat halaman. Silahkan coba lagi ya."
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="1sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/reload_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        app:icon="@drawable/ic_refresh"
        app:iconSize="13dp"
        app:iconPadding="11.31dp"
        app:iconGravity="textStart"
        app:iconTint="@color/text_primary"
        app:cornerRadius="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/stroke_primary"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Muat Ulang"
        android:textAllCaps="false"
        android:textColor="@color/text_primary"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content" />


</androidx.constraintlayout.widget.ConstraintLayout>
