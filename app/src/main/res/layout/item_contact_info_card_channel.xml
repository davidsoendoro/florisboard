<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_channel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/kobold_margin_12px">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/kobold_secondaryLabel12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kobold_contact_info_channel" />

            <TextView
                android:id="@+id/contact_info_channel_name"
                style="@style/kobold_secondaryLabel14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/kobold_margin_4px"
                android:text="WhatsApp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/contact_info_channel_account_header"
                style="@style/kobold_secondaryLabel12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Akun" />

            <TextView
                android:id="@+id/contact_info_channel_account"
                style="@style/kobold_secondaryLabel14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/kobold_margin_4px"
                android:text="WhatsApp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>


