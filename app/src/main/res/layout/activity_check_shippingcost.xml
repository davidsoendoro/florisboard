<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".dashboardcheckshippingcost.CheckShippingcost">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary80"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/icon_white" />


        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="17dp"
            android:layout_marginStart="20dp"
            android:text="@string/check_shippingcost_title"
            android:textColor="@color/text_color_white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/kobold_margin_16px"
        android:layout_marginVertical="@dimen/kobold_margin_24px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_shippingcost_sender_title" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kobold_margin_24px"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sender_address_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/check_shippingcost_sender_hint"
                android:textAppearance="@style/FormEditTextHint" />

            <TextView
                android:id="@+id/sender_address_edittext_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/template_text_error_length"
                android:textAppearance="@style/error_edit_text"
                android:visibility="gone" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_shippingcost_receiver_title" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kobold_margin_24px"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/receiver_address_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/check_shippingcost_receiver_hint"
                android:textAppearance="@style/FormEditTextHint" />

            <TextView
                android:id="@+id/receiver_address_edittext_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/template_text_error_length"
                android:textAppearance="@style/error_edit_text"
                android:visibility="gone" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/kobold_margin_24px">

            <TextView
                android:id="@+id/package_weight_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berat Paket"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Maks. 7kg"
                android:textColor="@color/text_disabled"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/package_weight_title" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/gray_1"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/minus_weight_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/background_subtle"
                        android:paddingHorizontal="12dp"
                        android:src="@drawable/ic_minus_minor" />

                    <TextView
                        android:id="@+id/package_weight_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:text="1 kg"
                        android:textColor="@color/text_secondary" />

                    <ImageView
                        android:id="@+id/plus_weight_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/background_subtle"
                        android:paddingHorizontal="12dp"
                        android:src="@drawable/ic_add_minor" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:background="@color/colorPrimary"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ProgressBar
                android:id="@+id/submit_button_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/submit_button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/kobold_blue_button_disabled"
                android:drawableTint="@color/icon_white"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="@string/check_shippingcost_button"
                android:textColor="@color/text_color_white" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/reset_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:drawableTint="@color/icon_white"
            android:gravity="center"
            android:text="@string/check_shippingcost_reset"
            android:textColor="@color/text_secondary" />

    </LinearLayout>
</LinearLayout>
